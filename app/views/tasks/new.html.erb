<h2>New task</h2>

<%= simple_form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>

<%= link_to 'Back to tasks list', tasks_path %>